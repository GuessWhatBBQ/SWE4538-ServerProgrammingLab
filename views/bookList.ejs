<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Books</title>
    <style>
        table, th, td {
            border: 1px solid black;
        }
        th, td {
            padding: 10px;
        }
    </style>
  </head>
  <body>
    <table>
    <tr>
        <th>Book Name</th>
        <th>Author</th>
        <th>Genre</td>
        <th>Delete</th>
        <th>Update</th>
    </tr>


    <%for(let i=0; i<books.length; i++){%>
        <tr>
            <td><%=books[i].name%></td>
            <td><%=books[i].author%></td>
            <td><%=books[i].genre%></td>
            <td>
            <form method="post" action=/books/delete/<%=books[i].id%> >
                <input type="hidden" name="name" value="value" />
                <span style="color: blue; cursor: pointer;" onclick="this.parentNode.submit();" >Delete</span>
            </form>
            </td>
            <td>
                <a href=/books/edit/<%=books[i].id%> > Edit</a>
            </td>

        </tr>
    <%}%>
</table>

  </body>
</html>
